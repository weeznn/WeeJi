<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWright</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="InputEditTextView" parent="InputEditTextView">
        <item name="android:colorControlNormal">@color/colorWright</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/colorWright</item>
    </style>

    <style name="APPThemeFullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="KeyWord" parent="InputEditTextView">
        <item name="android:textColor">#1A237E</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">all</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
    <style name="KeyWord_Weight" parent="InputEditTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:autoLink">all</item>
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="ProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:process">0</item>
        <item name="android:progressTint">@color/colorPrimary</item>
    </style>


</resources>
