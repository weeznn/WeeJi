<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWright</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="InputEditTextView" parent="InputEditTextView">
        <item name="android:colorControlNormal">@color/colorWright</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/colorWright</item>
    </style>

    <style name="APPThemeFullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
